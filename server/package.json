{
  "name": "temis-server",
  "version": "1.0.0",
  "description": "Backend for Temis: A voice to report acts of violence and create awareness",
  "main": "main.js",
  "scripts": {
    "precommit": "lint-staged",
    "prepush": "lint-staged && npm test --prefix ../app && npm test --prefix ../server",
    "prestart": "npm run lint",
    "start": "babel-node src/main.js",
    "dev": "nodemon --exec npm start",
    "test": "jest --runInBand",
    "test:watch": "npm run test -- --watch",
    "test-ci": "npm run lint && npm run test -- --coverage && cat ./coverage/lcov.info | coveralls && codecov",
    "build": "babel src -d dist",
    "serve": "node dist/main.js",
    "lint": "npm run lint:js -- --write **/*.js && npm run lint:json -- **/*.json",
    "lint:js": "prettier --config ../.prettierrc",
    "lint:json": "jsonlint-cli"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scvsoft/temis"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^4.0.0",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "geokdbush": "^1.1.0",
    "helmet": "^3.13.0",
    "jsonwebtoken": "^8.3.0",
    "kdbush": "^1.0.1",
    "moment": "^2.19.3",
    "mongoose": "^4.13.17",
    "passport": "^0.4.0",
    "passport-facebook-token": "^3.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "chaid": "^1.0.2",
    "codecov": "^3.0.4",
    "coveralls": "^3.0.2",
    "eslint": "^4.19.1",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.10.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "jsonlint": "^1.6.3",
    "jsonlint-cli": "^1.0.1",
    "lint-staged": "^4.3.0",
    "nock": "^9.6.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2"
  },
  "lint-staged": {
    "gitDir": "../",
    "linters": {
      "*.{js,jsx}": [
        "npm run lint:js -- --write",
        "git add"
      ],
      "*.json": [
        "npm run lint:json",
        "git add"
      ]
    }
  }
}
