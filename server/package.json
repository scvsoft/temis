{
  "name": "temis-server",
  "version": "1.0.0",
  "description": "Backend for Temis: A voice to report acts of violence and create awareness",
  "main": "index.js",
  "scripts": {
    "precommit": "lint-staged",
    "prepush": "lint-staged && npm test",
    "prestart": "npm run lint",
    "start": "node src/index.js",
    "dev": "nodemon --exec npm start",
    "test": "echo \"Error: no test specified\"",
    "test-ci": "npm run lint && npm run test",
    "build": "babel src -d dist",
    "serve": "node dist/index.js",
    "lint": "npm run lint:js -- --write **/*.{js,jsx} && npm run lint:json -- **/*.json",
    "lint:js": "prettier --config ../.prettierrc",
    "lint:json": "jsonlint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scvsoft/temis"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.10.0",
    "eslint-config-react-app": "^2.0.1",
    "husky": "^0.14.3",
    "jsonlint": "^1.6.2",
    "lint-staged": "^4.3.0",
    "nodemon": "^1.12.1",
    "prettier": "^1.8.2"
  },
  "lint-staged": {
    "gitDir": "../",
    "linters": {
      "*.{js,jsx}": [
        "npm run lint:js -- --write",
        "git add"
      ],
      "*.json": [
        "npm run lint:json",
        "git add"
      ]
    }
  }
}
